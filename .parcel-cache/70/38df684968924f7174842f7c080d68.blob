#card {
  background: #1E2127;
  color: white;
  font-family: "Archivo", sans-serif;
  border-radius: 10px;
}

#card-title {
  font-size: 40px;
  font-weight: 600;
  font-size: 21px;
}

#heart-img:hover {
  height: 22px;
  width: auto;
  float: right;
  height: 100%;
  display: flex;
  align-items: flex-end;
  shape-outside: inset(calc(100% - 100px) 0 0);
  margin-left: 15px;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}